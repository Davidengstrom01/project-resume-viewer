# --- Build stage ---
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Kopiera csproj och restore (för snabbare build-cache)
COPY *.sln .
COPY YourApiProject/*.csproj ./YourApiProject/
RUN dotnet restore

# Kopiera resten av koden och publicera
COPY . .
WORKDIR /src/YourApiProject
RUN dotnet publish -c Release -o /app

# --- Runtime stage ---
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app .

# Appen körs på port 8080 i containern
ENV ASPNETCORE_URLS=http://+:8080
EXPOSE 8080

ENTRYPOINT ["dotnet", "project-resume-viewer-api.dll"]